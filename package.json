{
  "name": "text-differ",
  "version": "1.0.0",
  "description": "A Node.js application to compare three text files with a dark theme and static export.",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "pkg . --targets node18-win-x64 --output built/text-differ.exe"
  },
  "pkg": {
    "scripts": [
      "node_modules/axios/dist/node/axios.cjs"
    ],
    "assets": [
      "public/**/*"
    ]
  },
  "dependencies": {
    "axios": "^1.13.2",
    "express": "^4.18.2",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
